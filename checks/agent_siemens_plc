def agent_siemens_plc_arguments(params, hostname, ipaddress):
    args = ''

    if "timeout" in params:
        args += ' --timeout %d' % params["timeout"]

    args += " " + quote_shell_string(ipaddress)
    args += " %d" % params["rack"]
    args += " %d" % params["slot"]
    args += " %d" % params["tcp_port"]

    for parts in params["values"]:
        args += " %s" % ",".join(map(str, parts))

    return args

special_agent_info['siemens_plc'] = agent_siemens_plc_arguments
